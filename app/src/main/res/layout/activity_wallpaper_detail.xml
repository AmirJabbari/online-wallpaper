<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.WallpaperDetailActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="4dp"
            app:cardElevation="6dp">


            <android.support.v7.widget.AppCompatImageView
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/img_wallpaper"
                />


        </android.support.v7.widget.CardView>

    </RelativeLayout>




        <RelativeLayout
            android:layout_marginBottom="40dp"
            android:id="@+id/rel_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <RelativeLayout
                android:layout_marginLeft="110dp"
                android:id="@+id/download_wallpaper"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:background="@drawable/circle"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="26dp"
                    android:layout_height="46dp"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/ic_file_download_black_24dp"
                    tools:ignore="VectorDrawableCompat" />

            </RelativeLayout>

            <RelativeLayout
                android:outlineAmbientShadowColor="#D2333333"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@id/download_wallpaper"
                android:id="@+id/set_wallpaper"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:background="@drawable/circle"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="26dp"
                    android:layout_height="46dp"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/ic_image_black_24dp"
                    tools:ignore="VectorDrawableCompat" />

            </RelativeLayout>



        </RelativeLayout>





</RelativeLayout>


